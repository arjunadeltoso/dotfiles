# env-specific settings
%include ~/.hgrc.local

[ui]
style = ~/.hg-style
ignore.system = ~/.hgignore
merge = vimdiff

[merge-tools]
vimdiff.executable = vim
vimdiff.args = -d -c "wincmd J" $output $local $other $base
vimdiff.premerge = keep

[diff]
showfunc = True
git = True
noprefix = True

[extensions]
color=
pager=

[alias]
show = !$HG log -vp -r $([[ -z "$1" ]] && echo . || echo $1)
